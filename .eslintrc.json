{
  "env": {
    "es2021": true
  },
  "extends": ["standard"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "comma-dangle": ["error", "only-multiline"]
  }
}
